<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ying.wardrobe.view.CommonHead
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg_color"
        android:paddingTop="@dimen/dp_30"
        app:leftImg="@mipmap/icon_backarrow"
        app:mid_txt="添加衣物"
        app:mid_txt_color="@color/colorWhite"
        app:show_left="true"></com.ying.wardrobe.view.CommonHead>

    <ImageView
        android:id="@+id/selectImage"
        android:layout_width="240dp"
        android:layout_height="@dimen/dp_120"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/addClothesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/common_blue_btn_bg"
        android:padding="@dimen/dp_10"
        android:text="选择文件"
        android:textColor="@color/color_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="价格："
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入价格"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:background="@color/title_bg_color"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="风格："
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/styleEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入风格"
            android:maxLines="1"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/confirmTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/common_blue_btn_bg"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="确定"
        android:textColor="@color/color_white" />
</LinearLayout>