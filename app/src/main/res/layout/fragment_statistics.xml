<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ying.wardrobe.view.CommonHead
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg_color"
        android:paddingTop="@dimen/dp_30"
        app:leftImg="@mipmap/icon_backarrow"
        app:mid_txt="统计"
        app:mid_txt_color="@color/colorWhite"
        app:show_left="false"></com.ying.wardrobe.view.CommonHead>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:text="近7天各类衣物穿着频率" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/duanxiuNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:text="1次"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/duanxiuNumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_horizontal"
                        android:text="短袖"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/changkuNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:text="1次"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/changkuNumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_horizontal"
                        android:text="长裤"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/qunziNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:text="1次"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qunziNumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_horizontal"
                        android:text="裙子"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/waitaoNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:text="1次"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/waitaoNumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_horizontal"
                        android:text="外套"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/maoziNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center_horizontal"
                        android:text="1次"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/maoziNumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center_horizontal"
                        android:text="帽子"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:text="近7天穿着频率较高的3件单品" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pinlv1TextView"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:text="1次"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_below="@+id/pinlv1TextView"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tabicon_bg_mine"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pinlv2TextView"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:text="1次"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_below="@+id/pinlv2TextView"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tabicon_bg_mine"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pinlv3TextView"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:text="1次"
                        android:padding="@dimen/dp_10"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_below="@+id/pinlv3TextView"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tabicon_bg_mine"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>